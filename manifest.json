{
  "manifest_version": 3,
  "name": "TLDR Reader",
  "version": "1.0.0",
  "description": "AI-powered reading assistant that summarizes articles and answers questions",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel",
    "tabs"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "side_panel": {
    "default_path": "sidepanel/panel.html"
  },
  "action": {
    "default_title": "Open TLDR Reader"
  },
  "options_page": "options/options.html"
} 