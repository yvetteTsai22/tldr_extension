{
  "manifest_version": 3,
  "name": "TLDR Reader",
  "version": "1.0.0",
  "description": "AI-powered reading assistant that summarizes articles and answers questions",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "sidePanel"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["main.js"],
      "css": ["content/styles.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel/panel.html"
  },
  "action": {
    "default_title": "Open TLDR Reader"
  }
} 